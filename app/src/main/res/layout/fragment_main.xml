<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/userButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:shadowColor="#A8A8A8"
            android:background="@drawable/mainbutton"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:layout_gravity="center_horizontal|center"
            android:text="Profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/dataButton"
            android:layout_toStartOf="@+id/fitChart" />
            <!--android:layout_toStartOf="@+id/circularProgressbar" /> -->

        <Button
            android:id="@+id/dataButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:shadowColor="#A8A8A8"
            android:background="@drawable/mainbutton"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:text="Data"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
          <!--  android:layout_toEndOf="@+id/circularProgressbar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/steps"
            android:layout_alignParentEnd="true" />
       android:layout_below="@+id/circularProgressbar" -->
        <!--<ProgressBar
            android:id="@+id/circularProgressbar"
            android:layout_width="175dp"
            android:layout_height="175dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:progress="75"
            android:secondaryProgress="100"
            android:progressDrawable="@drawable/circular"
            android:layout_below="@+id/userButton"
            android:layout_centerHorizontal="true" /> -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userButton"
            android:id="@+id/frameLayout"
            android:layout_gravity="center"
            android:layout_above="@+id/foodButton"
            android:layout_alignParentEnd="true">


        </FrameLayout>


        <Button
            android:id="@+id/calendarButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:background="@drawable/mainbutton"
            android:shadowRadius="16"
            android:layout_gravity="center_horizontal|center"
            android:text="Calendar"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/weightButton"
            android:layout_marginBottom="7dp" />

        <Button
            android:id="@+id/workoutButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:background="@drawable/mainbutton"
            android:layout_gravity="center_horizontal"
            android:text="Workout"
            android:layout_above="@+id/weightButton"
            android:layout_alignStart="@+id/weightButton"
            android:layout_marginBottom="7dp" />

        <Button
            android:id="@+id/foodButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:background="@drawable/mainbutton"
            android:shadowRadius="16"
            android:layout_gravity="center_horizontal|center"
            android:text="Enter Food"
            android:layout_above="@+id/workoutButton"
            android:layout_alignStart="@+id/workoutButton"
            android:layout_marginBottom="7dp" />

        <Button
           android:id="@+id/weightButton"
           android:textColor="#FFFFFF"
           android:textSize="18sp"
           android:layout_width="wrap_content"
           android:layout_height="35dp"
           android:shadowColor="#A8A8A8"
           android:background="@drawable/mainbutton"
           android:shadowDx="0"
           android:shadowDy="0"
           android:shadowRadius="16"
           android:layout_gravity="right|center_vertical"
           android:text="Weight"
           android:layout_column="0"
            android:layout_above="@+id/calendarButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:foregroundGravity="center|center_vertical|center_horizontal"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_alignEnd="@+id/foodButton"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="98dp">

            <TextView
                android:id="@+id/steps"
                android:layout_width="140dp"
                android:layout_height="52dp"
                android:maxWidth="200dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:textSize="15sp"
                android:textColor="#757575"
                android:gravity="center"
                android:text="Your goal is 10,000 steps." />

        </LinearLayout>

        <com.app.agile_overlords.moveandgroove.FitChart.Widgets.FitChart
            style="@style/chart_style"
            android:layout_gravity="center"
            app:animationMode="overdraw"
            android:id="@+id/fitChart"
            android:foregroundGravity="center|center_vertical|center_horizontal"
            android:layout_above="@+id/foodButton"
            android:layout_alignEnd="@+id/foodButton" />

    </RelativeLayout>

</FrameLayout>