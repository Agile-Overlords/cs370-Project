<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/userButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:layout_gravity="center_horizontal|center"
            android:text="Profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/dataButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:text="Data"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <ProgressBar
            android:id="@+id/circularProgressbar"
            android:layout_width="175dp"
            android:layout_height="175dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:progress="75"
            android:max="100"
            android:secondaryProgress="100"
            android:progressDrawable="@drawable/circular"
            android:layout_below="@+id/userButton"
            android:layout_centerHorizontal="true" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/workoutButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:layout_gravity="center_horizontal|center"

            android:text="Workout"
            android:layout_above="@+id/weightButton"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/calendarButton" />

        <Button
            android:id="@+id/foodButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:layout_gravity="center_horizontal|center"
            android:text="Enter Food"
            android:layout_above="@+id/weightButton"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/calendarButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:layout_gravity="center_horizontal|center"
            android:text="Calendar"
            android:layout_below="@+id/workoutButton"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/foodButton" />

        <Button
            android:id="@+id/weightButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
