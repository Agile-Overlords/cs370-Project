<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="11dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="11dp"
    android:orientation="vertical"
    tools:context=".Fragments.UserFragment">

    <TextView
        android:id="@+id/name"
        android:text="Settings"
        android:textSize="37dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="screen"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:text="Fill in the below fields to change your account information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="13sp"

        android:gravity="fill_horizontal|center_vertical"

        android:paddingBottom="10dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:textSize="12sp"

        android:gravity="center_vertical"

        android:paddingRight="5dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Age: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:layout_below="@+id/lastN"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Sex: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/weight"
        android:layout_alignEnd="@+id/text3" />
    <TextView
        android:text="Weight: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:layout_below="@+id/age"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Height: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text6"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:layout_below="@+id/weight"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text7"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/heightFt"
        android:layout_marginTop="21dp" />
    <TextView
        android:text="In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text8"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:layout_alignTop="@+id/text7"
        android:layout_toEndOf="@+id/heightIn" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/text6"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Weight"
        android:inputType="number"
        android:textStyle="italic"
        android:layout_below="@+id/age"
        android:layout_toEndOf="@+id/text2" />

    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Age"
        android:inputType="number"
        android:layout_below="@+id/lastN"
        android:layout_toEndOf="@+id/text4"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/heightFt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:hint="..."
        android:layout_alignBaseline="@+id/text7"
        android:layout_alignBottom="@+id/text7"
        android:layout_toEndOf="@+id/text2" />
    <EditText
        android:id="@+id/heightIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="..."
        android:inputType="number"
        android:layout_alignTop="@+id/heightFt"
        android:layout_toEndOf="@+id/text7" />


    <Button
        android:id="@+id/updateInfo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:background="@drawable/mainbutton"
        android:text="Update Your User Info"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Lbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:layout_below="@+id/text5"
        android:layout_toEndOf="@+id/weight" />

    <EditText
        android:id="@+id/firstN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First"
        android:layout_below="@+id/text2"
        android:layout_alignStart="@+id/text4"
        android:layout_alignParentEnd="true"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/lastN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last"
        android:layout_below="@+id/firstN"
        android:layout_toEndOf="@+id/heightIn"
        android:layout_alignStart="@+id/firstN"
        android:textStyle="italic" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/text4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/text4"
        android:layout_above="@+id/updateInfo">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/radioButton2"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/radioButton1"
            android:checked="false" />

    </RadioGroup>

</RelativeLayout>


