<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Fragments.UserFragment">

    <TextView
        android:id="@+id/name"
        android:text="Settings"
        android:textSize="37dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="screen"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />




        <EditText
            android:id="@+id/firstN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="update first name"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/lastN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="update last name"
            android:layout_alignTop="@+id/firstN"
            android:layout_alignParentEnd="true" />
        <EditText
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="update weight"
            android:inputType="number"

            android:layout_below="@+id/sex"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="update sex"
            android:layout_below="@+id/age"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="update age"
            android:inputType="number"
            android:layout_below="@+id/firstN"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/heightFt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="update height (ft)"
            android:inputType="number"
            android:layout_below="@+id/weight"
            android:layout_alignParentStart="true"
            android:layout_marginTop="49dp" />
        <EditText
            android:id="@+id/heightIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="update height (in)"
            android:inputType="number"
            android:layout_alignTop="@+id/heightFt"
            android:layout_alignStart="@+id/lastN" />


    <Button
        android:id="@+id/updateInfo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:background="@drawable/mainbutton"
        android:text="Update Your User Info"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

</RelativeLayout>