<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Fragments.UserFragment">

    <TextView
        android:id="@+id/name"
        android:text="Settings"
        android:textSize="37dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="screen"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:text="Fill in the below fields to change your account information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="20sp"

        android:gravity="center_vertical"

        android:paddingRight="5dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:textSize="20sp"

        android:gravity="center_vertical"

        android:paddingRight="5dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />
    <TextView
        android:text="Age: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/firstN"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Sex: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/age"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Weight: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/sex"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Height: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text6"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/weight"
        android:layout_alignEnd="@+id/text5" />
    <TextView
        android:text="Ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text7"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/text6"
        android:layout_toEndOf="@+id/heightFt" />
    <TextView
        android:text="In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text8"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/text7"
        android:layout_toEndOf="@+id/lastN" />

    <EditText
        android:id="@+id/firstN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="first..."
        android:layout_alignTop="@+id/text2"
        android:layout_alignEnd="@+id/heightFt" />
    <EditText
        android:id="@+id/lastN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="last..."
        android:layout_below="@+id/text1"
        android:layout_alignStart="@+id/textView" />
    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="100"
        android:inputType="number"
        android:layout_below="@+id/sex"
        android:layout_toEndOf="@+id/text2" />
    <EditText
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint=" sex?"
        android:layout_below="@+id/age"
        android:layout_toEndOf="@+id/text3" />
    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="age"
        android:inputType="number"
        android:layout_below="@+id/firstN"
        android:layout_toEndOf="@+id/text3" />
    <EditText
        android:id="@+id/heightFt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="(ft)"
        android:inputType="number"
        android:layout_alignBaseline="@+id/heightIn"
        android:layout_alignBottom="@+id/heightIn"
        android:layout_toEndOf="@+id/text6" />
    <EditText
        android:id="@+id/heightIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="(in)"
        android:inputType="number"
        android:layout_below="@+id/weight"
        android:layout_toEndOf="@+id/text7" />


    <Button
        android:id="@+id/updateInfo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:background="@drawable/mainbutton"
        android:text="Update Your User Info"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

    <TextView
        android:text="Lbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/text5"
        android:layout_toEndOf="@+id/heightFt" />

</RelativeLayout>


