<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/workoutButton"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:background="@color/mainbutton"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:text="Workout"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Chronometer
        android:id="@+id/chronometer"
        android:format="%s"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal|center"
        android:layout_alignBaseline="@+id/resetButton"
        android:layout_alignBottom="@+id/resetButton"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/startButton"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:background="@color/mainbutton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:layout_gravity="center_horizontal|center"
        android:text="Start"
        android:layout_above="@+id/stopButton"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/stopButton"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:background="@color/mainbutton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:layout_gravity="center_horizontal|center"
        android:text="Stop"
        android:layout_above="@+id/resetButton"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/resetButton"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:background="@color/mainbutton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:layout_gravity="center_horizontal|center"
        android:text="Reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="187dp" />

    <Button
        android:id="@+id/createWorkout"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#A8A8A8"
        android:background="@color/mainbutton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:text="Create"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>


</LinearLayout>