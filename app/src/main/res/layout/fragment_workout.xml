<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/workoutButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:background="@drawable/mainbutton"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:text="View Exercises"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/clearButton"
            android:layout_alignEnd="@+id/clearButton" />
        <TextView
            android:text="Calories burned so far"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text5"
            android:textSize="26sp"

            android:layout_alignParentTop="true"

            android:layout_marginTop="94dp" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text6"
            android:textSize="26sp"

            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image"
            android:layout_alignStart="@+id/clearButton"
            android:layout_below="@+id/text6"
            android:layout_above="@+id/workoutButton"
            android:layout_alignEnd="@+id/workoutButton" />

        <TextView
            android:id="@+id/calView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="39sp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/caloriesBurned"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:backgroundTintMode="screen" />

        <Button
            android:id="@+id/clearButton"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:shadowColor="#A8A8A8"
            android:background="@drawable/mainbutton"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"
            android:text="Reset your calories"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

   <!-- <Button
        android:id="@+id/createWorkout"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#A8A8A8"
        android:background="@color/mainbutton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="16"
        android:text="Create"
        android:layout_gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="104dp" /> -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's Workout!"
            android:id="@+id/caloriesBurned"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@android:drawable/divider_horizontal_dark"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:background="#A8A8A8"
            android:backgroundTint="#A8A8A8"
            android:id="@+id/imageView"
            android:layout_below="@+id/clearButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="55dp" />
    </RelativeLayout>


</LinearLayout>