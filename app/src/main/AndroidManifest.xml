<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.agile_overlords.moveandgroove">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature
        android:name="@string/step_detector" android:required="false"/>
    <uses-feature
        android:name="@string/step_counter" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fork"
        android:label="Fork Lift"
        android:supportsRtl="true"
        android:showAsAction="always|withText"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.WorkoutActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:label="Fork Lift">
            </activity>
        <activity

            android:name=".Activities.SearchActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:label="@string/app_name">
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
